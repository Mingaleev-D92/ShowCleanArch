<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/nav_graph"
   app:startDestination="@id/showListFragment">

   <fragment
      android:id="@+id/showListFragment"
      android:name="com.example.showcleanarch.ui.show_list.ShowListFragment"
      android:label="fragment_show_list"
      tools:layout="@layout/fragment_show_list" >
      <action
         android:id="@+id/action_showListFragment_to_detailsFragment"
         app:destination="@id/detailsFragment" />
      <action
         android:id="@+id/action_showListFragment_to_searchFragment"
         app:destination="@id/searchFragment" />
      <action
         android:id="@+id/action_showListFragment_to_savedFragment"
         app:destination="@id/savedFragment" />
   </fragment>
   <fragment
      android:id="@+id/detailsFragment"
      android:name="com.example.showcleanarch.ui.details.DetailsFragment"
      android:label="fragment_details"
      tools:layout="@layout/fragment_details" />
   <fragment
      android:id="@+id/savedFragment"
      android:name="com.example.showcleanarch.ui.saved.SavedFragment"
      android:label="fragment_saved"
      tools:layout="@layout/fragment_saved" >
      <action
         android:id="@+id/action_savedFragment_to_detailsFragment"
         app:destination="@id/detailsFragment" />
   </fragment>
   <fragment
      android:id="@+id/searchFragment"
      android:name="com.example.showcleanarch.ui.search.SearchFragment"
      android:label="fragment_search"
      tools:layout="@layout/fragment_search" >
      <action
         android:id="@+id/action_searchFragment_to_detailsFragment"
         app:destination="@id/detailsFragment" />
   </fragment>
</navigation>